{
  "name": "@minsoochoo/audio-player",
  "version": "0.1.1",
  "description": "SvelteKit audio player for your music, with custom controls, playlist, filters, and search functionality.",
  "keywords": [
    "svelte",
    "sveltekit",
    "audio",
    "player",
    "mp3",
    "music"
  ],
  "homepage": "https://gitlab.com/minsoochoo/audio-player#readme",
  "author": "Minsoo Choo <minsoochoo0122@proton.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/minsoochoo/audio-player.git"
  },
  "bugs": {
    "url": "https://gitlab.com/minsoochoo/audio-player/-/issues"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && bun run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "vitest run",
    "test:headless": "vitest run --browser.headless",
    "test:watch": "vitest",
    "test:watch:headless": "vitest --browser.headless",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:browser": "vitest --workspace=vitest.workspace.ts"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.22.0",
    "@playwright/test": "^1.51.0",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-mdx-gfm": "^8.6.4",
    "@storybook/addon-svelte-csf": "^5.0.0-next.27",
    "@storybook/blocks": "^8.6.4",
    "@storybook/svelte": "^8.6.4",
    "@storybook/sveltekit": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.19.0",
    "@sveltejs/package": "^2.3.10",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.0.12",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.13.10",
    "@vitest/browser": "^3.0.8",
    "@vitest/ui": "^3.0.8",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-svelte": "^3.1.0",
    "globals": "^16.0.0",
    "playwright": "^1.51.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "publint": "^0.3.9",
    "storybook": "^8.6.4",
    "svelte": "^5.22.6",
    "svelte-check": "^4.1.5",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.1",
    "vitest": "^3.0.8",
    "vitest-browser-svelte": "^0.1.0"
  }
}
